# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# git
alias gs='git status'
alias gc='git commit'
alias ga='git add'

#tmux
alias tn='tmux new -s'
alias ta='tmux attach -t'
alias tk='tmux kill-session -t'

#vim
alias v='vim'
